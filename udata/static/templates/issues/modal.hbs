<div class="tab-content">
    <div class="tab-pane fade in active" id="list">
        <div class="text-center spinner-container">
            <i class="fa fa-2x fa-refresh fa-spin"></i>
        </div>
    </div>
    <div class="tab-pane fade" id="new-form">
        <p><strong>{{_ 'Please provide issue details' }}</strong></p>
        <form role="form">
            <div class="form-group">
                <div class="radio">
                    <label>
                        <input type="radio" name="type" value="illegal" required/>
                        {{_ 'Illegal content' }}: {{_ 'licence concern, privacy concern, defamatory statements ...' }}
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="type" value="tendencious" required/>
                        {{_ "Tendencious content" }}: {{_ "data alteration, partial or truncated data" }}
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="type" value="advertisement" required/>
                        {{_ "Advertising content" }}: {{_ "the content is a commercial advertisement" }}
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="type" value="other" required/>
                        {{_ "Other" }}
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label for="comment">{{_ "Details" }}</label>
                <textarea id="comment" name="comment" class="form-control" rows="3" required></textarea>
            </div>
        </form>
    </div>
</div>
