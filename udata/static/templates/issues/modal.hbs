<div class="tab-content">
    <div class="tab-pane fade in active" id="list">
        <div class="text-center spinner-container">
            <i class="fa fa-2x fa-refresh fa-spin"></i>
        </div>
    </div>
    <div class="tab-pane fade" id="new-form">
        <p><strong>{{_ 'Please provide issue details' }}</strong></p>
        <form role="form">
            <div class="form-group">
                {{#eachInMap labels}}
                <div class="radio">
                    <label>
                        <input type="radio" name="type" value="{{key}}" required/>
                        {{value}}
                    </label>
                </div>
                {{/eachInMap}}
            </div>
            <div class="form-group">
                <label for="title">{{_ "Title" }}</label>
                <input type="text" id="title" name="title" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="comment">{{_ "Details" }}</label>
                <textarea id="comment" name="comment" class="form-control" rows="3" required></textarea>
            </div>
        </form>
    </div>
</div>
